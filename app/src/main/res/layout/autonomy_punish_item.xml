<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#EEEEEE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/details_con_bg"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="序号："
            android:textColor="#000000"
            style="@style/TextBold"
            android:textSize="16sp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/punish_xh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextBold"
            android:textColor="#57737D"
            android:textSize="14sp" />
        <View
            android:background="#B8B8B8"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_height="1dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="处罚决定书文号："
                android:textColor="#000000"
                style="@style/TextBold"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/punish_pripid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextBold"
                android:layout_marginTop="5dp"
                android:textColor="#57737D"
                android:textSize="12sp" />
        <View
            android:background="#B8B8B8"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_height="1dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="违法行为类型："
            android:textColor="#000000"
            android:textSize="14sp"
            style="@style/TextBold"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/punish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextBold"
            android:layout_marginTop="5dp"
            android:textColor="#57737D"
            android:textSize="12sp" />
        <View
            android:background="#B8B8B8"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_height="1dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="处罚种类："
            style="@style/TextBold"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/punish_registerno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextBold"
            android:layout_marginTop="5dp"
            android:textColor="#57737D"
            android:textSize="12sp" />
        <View
            android:background="#B8B8B8"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_height="1dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="罚款金额(万元)："
            android:textColor="#000000"
            style="@style/TextBold"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/punish_creditno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextBold"
            android:layout_marginTop="5dp"
            android:textColor="#57737D"
            android:textSize="12sp" />
        <View
            android:background="#B8B8B8"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_height="1dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没收金额(万元)："
            android:textColor="#000000"
            style="@style/TextBold"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/punish_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextBold"
            android:layout_marginTop="5dp"
            android:textColor="#57737D"
            android:textSize="12sp" />
        <View
            android:background="#B8B8B8"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_height="1dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作出行政处罚决定机关名称："
            style="@style/TextBold"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/punish_illtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextBold"
            android:layout_marginTop="5dp"
            android:textColor="#57737D"
            android:textSize="12sp" />
        <View
            android:background="#B8B8B8"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="处罚种类："
            android:textColor="#000000"
            style="@style/TextBold"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/punish_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextBold"
            android:layout_marginTop="5dp"
            android:textColor="#57737D"
            android:textSize="12sp" />
        <View
            android:background="#B8B8B8"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_height="1dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作出处罚决定书日期："
            android:textColor="#000000"
            style="@style/TextBold"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/punish_type_cn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextBold"
            android:layout_marginTop="5dp"
            android:textColor="#57737D"
            android:textSize="12sp" />
        <View
            android:background="#B8B8B8"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_height="1dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公示日期："
            android:textColor="#000000"
            style="@style/TextBold"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/punish_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextBold"
            android:layout_marginTop="5dp"
            android:textColor="#57737D"
            android:textSize="12sp" />
        <View
            android:background="#B8B8B8"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_height="1dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注："
            style="@style/TextBold"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/punish_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextBold"
            android:layout_marginTop="5dp"
            android:textColor="#57737D"
            android:textSize="12sp" />
        <View
            android:background="#B8B8B8"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_height="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详情："
                style="@style/TextBold"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/punihs_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextBold"
                android:layout_marginTop="5dp"
                android:textColor="#57737D"
                android:textSize="12sp" />

    </LinearLayout>


</LinearLayout>